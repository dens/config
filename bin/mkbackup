#!/bin/sh -e

bydate=0
if [ "$1" = "-d" ]; then
    bydate=1
    shift
fi

file=${1?"usage: mkbackup [-d] FILE"}

if [ "$bydate" = "1" ]; then
    timestamp=$(date -r "$file" "+%s")
    bakfile="$file.~$(date -d@$timestamp "+%Y%m%d")~"
    if [ -e "$bakfile" ]; then
        bakfile="$file.~$(date -d@$timestamp "+%Y%m%d%H%M")~"
    fi
    if [ -e "$bakfile" ]; then
        bakfile="$file.~$(date -d@$timestamp "+%Y%m%d%H%M%S")~"
    fi
    if [ -e "$bakfile" ]; then
        echo "ERROR: file exists: $bakfile"
        exit 1
    fi
    echo "copy $file -> $bakfile"
    cp -a "$file" "$bakfile"
else
    n=1
    while true; do
        bakfile="${file}.~$n~"
        if [ ! -e "$bakfile" ]; then
            echo "copy $file -> $bakfile"
            cp -a "$file" "$bakfile"
            break
        fi
        n=$((n + 1))
    done
fi
