# -*- conf -*-
[core]
        #pager = less -FRSX
        excludesfile = ~/.gitignore

[pager]
        status = true

[color]
        ui = auto

[log]
        decorate = short
        abbrevCommit = true

[alias]
        s = status -s
        st = status
        ci = commit
        br = branch
        co = checkout
        di = diff
        dic = diff --cached
        dis = diff --stat
        ls = ls-files
        lg = log --no-merges --pretty=format:'%C(yellow)%h%Creset %Cred%an%Creset [%Cgreen%ad%Creset]%Cblue%d%Creset%n  %s%n'
        sh = show --stat
        cpick = cherry-pick -x

# [i18n]
#         logOutputEncoding = iso-8859-1
#         commitEncoding = iso-8859-1
